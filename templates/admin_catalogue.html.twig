{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/style-admin.css') }}" />
{% endblock %}

{% block body %}
<main>
    <div class="main-container">
        <div class="header">
            <h1>Catalogue</h1>
        </div>

        <ul id="navbar-dashboard">
              <li>
                <a href="#">
                  <span class="material-icons-sharp"> group </span
                  ><b>Gestion des Utilisateurs</b>
                </a>
              </li>
              <li>
                <a href="#">
                  <span class="material-icons-sharp"> app_registration </span
                  >Gestion des UEs
                </a>
              </li>
            </ul>

        <div class="content">
            <h2>Gestion des Utilisateurs</h2>
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Email</th>
                        <th>Mot de passe</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.nomUser }}</td>
                            <td>{{ user.prenomUser }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.password }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <h2>List of UEs</h2>
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Nom</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ue in ues %}
                        <tr>
                            <td>{{ ue.codeUE }}</td>
                            <td>{{ ue.nomUE }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</main>
{% endblock %}