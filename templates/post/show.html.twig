    <table class="table">
        <tbody>
            <tr>
                <th>IdPost</th>
                <td>{{ post.idPost }}</td>
            </tr>
            <tr>
                <th>TitrePost</th>
                <td>{{ post.titrePost }}</td>
            </tr>
