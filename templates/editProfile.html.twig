{% extends 'base.html.twig' %}

{% block title %}Gestion du compte
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/editProfile.css') }}" />
{% endblock %}

{% block body %}
    <main>
        <div class="box"> <h3>Accueil/Gestion du compte</h3> </div>
        <h2>General</h2>

        <div>
            <div class="picture">
                <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="profilePicture">
                {% if app.user %}
                    <h1>{{ app.user.nomUser }} {{ app.user.prenomUser }}</h1>
                {% else %}
                    <h1>Guest</h1>
                {% endif %}
                </div>
             <div class="form-group"  >
            <form method="POST" >
                <div class="form-item">
                    <label>Pr√©nom :</label>
                    <input type="text"  id="Fname"  name="Fname" value="{{ app.user.prenomUser }}"><br>
                </div>

                <div class="form-item">
                    <label> Nom : </label>
                    <input type="text"  id="Lname"  name="Lname" value="{{ app.user.nomUser }}"><br>
                </div>

                <div class="form-item">
                    <label>Email :</label>
                    <input type="email"  id="Email"  name="Email" value="{{ app.user.email }}"><br>
                </div>

                <div class="form-item">
                <label> Password : </label>
                <input type="password"  id="Password"  name="Password" placeholder="Leave blank to keep current password"><br>

                </div>

                <button type="submit" value="submit">save</button>
            </form>
             </div>
        </div>
    </main>
{% endblock %}

