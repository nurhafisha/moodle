{% extends 'base.html.twig' %} {% block title %}Register{% endblock %} {% block
stylesheets %}
<link rel="stylesheet" href="{{ asset('styles/style-admin.css') }}" />
{% endblock %} {% block body %}
<main>
  <div class="main-container">
    <h2 class="title">Cr√©er un nouveau utilisateur</h2>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, { attr: { class: "form-container" } }) }}
    <div class="form-group">
      {{ form_label(registrationForm.nomUser) }}
      {{
        form_widget(registrationForm.nomUser, {
          attr: { class: "form-control" }
        })
      }}
    </div>
    <div class="form-group">
      {{ form_label(registrationForm.prenomUser) }}
      {{
        form_widget(registrationForm.prenomUser, {
          attr: { class: "form-control" }
        })
      }}
    </div>
    {#
    <div class="form-group">
      {{ form_label(registrationForm.email) }}
      {{
        form_widget(registrationForm.email, { attr: { class: "form-control" } })
      }}
    </div>
    #}
    <div class="form-group">
      {{ form_label(registrationForm.plainPassword) }}
      {{
        form_widget(registrationForm.plainPassword, {
          attr: { class: "form-control" }
        })
      }}
    </div>
    <div class="form-group">
      {{ form_label(registrationForm.roles) }}
      {{
        form_widget(registrationForm.roles, {
          attr: { class: "form-control roles-checkbox" }
        })
      }}
    </div>
    <div class="form-group">
      <label>Liste UE</label>
      <div id="liste-ue-container">
        {% for ue in registrationForm.liste_ue %}
          <div class="ue-item">
            {{ form_widget(ue, {'attr': {'class': 'd-none'}}) }}
            <button type="button" class="btn btn-outline-primary ue-btn">{{ form_label(ue) }}</button>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="action-buttons">
      <a href="{{ path('admin_catalogue') }}" class="btn btn-back">Retourner</a>
      <button type="submit" class="btn btn-register">Enregistre</button>
    </div>

    {{ form_end(registrationForm) }}
  </div>
</main>
{% endblock %}
