{% extends 'base.html.twig' %} {% block title %}Catalogue{% endblock %} {% block
stylesheets %}
<link rel="stylesheet" href="{{ asset('styles/style-admin.css') }}" />
{% endblock %} {% block body %}
<main>
  <div class="main-container">
    <div class="header">
      <h1>Catalogue</h1>
    </div>

    <div class="add-ue">
      <h2>Liste de UEs</h2>
      <a href="{{ path('app_new_ue_new') }}" class="btn btn-add"
        >Ajouter une UE</a
      >
    </div>

    <div class="table-container">
      <table class="styled-table">
        <thead>
          <tr>
            <th>Code UE</th>
            <th>Nom UE</th>
            <th>ImageUE</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for new_ue in new_ues %}
          <tr>
            <td>{{ new_ue.codeUE }}</td>
            <td>{{ new_ue.nomUE }}</td>
            <td>{{ new_ue.imageUE }}</td>
            <td>
              <a
                href="{{ path('app_new_ue_show', { idUE: ue.idUE }) }}"
                class="btn btn-mod"
                >Consulter</a
              >
              <a
                href="{{ path('app_new_ue_edit', { idUE: ue.idUE }) }}"
                class="btn btn-mod"
                >Modifier</a
              >
              {{ include("ue/_delete_form.html.twig", { ue: ue }) }}
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</main>
{% endblock %}
